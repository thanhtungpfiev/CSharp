<Window
    x:Class="ContactsApp.ContactDetailsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ContactsApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ContactDetailsWindow"
    Width="400"
    Height="300"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name:" />
            <TextBox x:Name="textBoxName" Margin="0,0,0,5" />
            <TextBlock Text="Email:" />
            <TextBox x:Name="textBoxEmail" Margin="0,0,0,5" />
            <TextBlock Text="Phone:" />
            <TextBox x:Name="textBoxPhone" Margin="0,0,0,5" />
            <Button
                Margin="0,0,0,5"
                Click="ButtonUpdate_Click"
                Content="Update" />
            <Button
                Background="OrangeRed"
                Click="ButtonDelete_Click"
                Content="Delete"
                Foreground="White" />
        </StackPanel>
    </Grid>
</Window>
