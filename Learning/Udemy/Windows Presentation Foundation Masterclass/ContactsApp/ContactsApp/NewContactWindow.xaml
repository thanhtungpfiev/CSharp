<Window
    x:Class="ContactsApp.NewContactWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ContactsApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="NewContactWindow"
    Width="400"
    Height="300"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name:" />
            <TextBox x:Name="textBoxName" Margin="0,0,0,5" />
            <TextBlock Text="Email:" />
            <TextBox x:Name="textBoxEmail" Margin="0,0,0,5" />
            <TextBlock Text="Phone:" />
            <TextBox x:Name="textBoxPhone" Margin="0,0,0,5" />
            <Button Click="ButtonSave_Click" Content="Save" />
        </StackPanel>
    </Grid>
</Window>
